@{
    ViewBag.Title = "Envoyer mail au follower";
}

<h4>Envoie de mail au follower</h4>

<div>
    @using (Html.BeginForm("SendMail", "Artist"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Message", "Message a envoyer", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control", @Value = "" } })
                    @Html.ValidationMessage("Message")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Envoyer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>