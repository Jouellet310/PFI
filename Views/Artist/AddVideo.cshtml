@model MySpace.Models.Video

@using (Html.BeginForm("AddVideo", "Artist"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="form-horizontal">
        @Html.Hidden("Id")
        @Html.Hidden("ArtistId")
        @Html.Hidden("Creation")

        <div class="form-group">
            @Html.Label("Title", "Titre de la video", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control", @Value = "" } })
                @Html.ValidationMessage("Title")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("YoutubeLink", "Lien YouTube", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("YoutubeLink", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("YoutubeLink")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}